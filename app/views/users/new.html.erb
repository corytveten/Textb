<h3>Sign Up</h3>

<%= form_for @user do |f| %>
    <%= f.label "Username" %>
    <%= f.text_field :username %><br>
    <%= f.label "Email" %>
    <%= f.text_field :email %><br>
    <%= f.label "Password" %>
    <%= f.text_field :password %><br>
    <%= f.submit %>

    <p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>
    
<% end %>