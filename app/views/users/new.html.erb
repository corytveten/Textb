<h3>Sign Up</h3>

<%= form_for @user do |f| %>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <p>Please see following errors:</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


	<div class="field<%= ' field_with_errors' if @user.errors[:username].any? %>">
    <%= f.label "Username" %>
    <%= f.text_field :username %><br>
    </div>

	<div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
    <%= f.label "Email" %>
    <%= f.text_field :email %><br>
    </div>

    <div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">	
    <%= f.label "Password" %>
    <%= f.password_field :password %><br>
    </div>

    <%= f.submit "Create User" %>

    <p><%= link_to('Log in with Github!', '/auth/github') %></p>
    
<% end %>