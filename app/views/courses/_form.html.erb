<h2>Course</h2>

<%= form_for @course do |f| %>

    <% if @course.errors.any? %>
        <div id="error_explanation">
            <p>The following errors occured:</p>
            <ul>
            <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <!-- <p>School:</p>
    <%= f.collection_check_boxes(:school_id, School.all, :id, :name) %> -->
    
    <div class="field<%= ' field_with_errors' if @course.errors[:school_name].any? %>">
    <%= f.label "School Name" %>
    <%= f.text_field :school_name %><br>
    </div>

    <div class="field<%= ' field_with_errors' if @course.errors[:code].any? %>">
    <%= f.label "Course Code" %>
    <%= f.text_field :code %><br>

    <div class="field<%= ' field_with_errors' if @course.errors[:title].any? %>">
    <%= f.label "Course Title" %>
    <%= f.text_field :title %>

    <%= f.submit %>
<% end %>