<h3><%= @course.school_name %></h3>
<h4><%= @course.code %>
<%= @course.title %></h4>

<h4>Textbooks</h4>
<% @course.textbooks.each do |textbook| %>
    <%= link_to textbook.title, course_textbook_path(@course, textbook) %><br>
<% end %>


<h4>Comments</h4>
<% @course.course_textbooks.each do |textbook| %>
    <%= textbook.textbook.title %>
    <%= textbook.comment %><br>
<% end %>


<h4><%= link_to "Add a Textbook", new_course_textbook_path(@course) %></h4>
<p><%= link_to "Edit Course", edit_course_path(@course) %></p>