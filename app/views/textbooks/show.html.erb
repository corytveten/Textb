<% if @textbook.course_ids.any? %>
    <p>Textbook for:</p>
    <% @textbook.course_textbooks.each do |c_text| %>
        <p><%= c_text.course.code %>
        <%= c_text.course.school_name %></p>
    <% end %>
<% else %>
    <p>No Attached Courses</p>
<% end %>
    <%= @textbook.title %> -
    <%= @textbook.author %>


<p><%= link_to "Add Comment", new_course_textbook_course_textbook_path(:course_id => @textbook.course_ids, :textbook_id => @textbook.id) %><p>
<p><%= link_to "Edit Textbook", edit_textbook_path(@textbook) %></p>
<p><%= link_to "Delete this Textbook", textbook_path(@textbook), method: :delete, data: { confirm: 'Are you sure you want to delete this textbook?' } %></p>
